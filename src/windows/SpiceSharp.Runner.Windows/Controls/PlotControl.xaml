<UserControl x:Class="SpiceSharp.Runner.Windows.Controls.PlotControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SpiceSharp.Runner.Windows.Controls"
             xmlns:oxy="http://oxyplot.org/wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <Label DockPanel.Dock="Top" Content="Options" />
        <CheckBox Name="x" Content="X-axis Log scale" Height="20" DockPanel.Dock="Top" Click="CheckBox_Click" />
        <CheckBox Name="y" Content="Y-axis Log scale" Height="20" DockPanel.Dock="Top" Click="CheckBox_Click_1"/>
        <Button Name="save" Content="Save" DockPanel.Dock="Bottom" Click="save_Click"/>
        <oxy:PlotView Name="plot" Model="{Binding Model}" HorizontalAlignment="Stretch" VerticalContentAlignment="Stretch" />
    </DockPanel>
</UserControl>
