<UserControl x:Class="SpiceSharp.Runner.Windows.Controls.PrintControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SpiceSharp.Runner.Windows.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel Name="Panel" LastChildFill="True" Background="Gray">
            <Label Name="Title" DockPanel.Dock="Top"  VerticalAlignment="Top"/>
            <Button Content="Save to CSV" DockPanel.Dock="Top" Click="Button_Click" />
            <Grid>
                <DataGrid
                      Name="dataGrid"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch">
                </DataGrid>
            </Grid>
        </DockPanel>
</UserControl>
