<UserControl x:Class="SpiceSharpRunner.Windows.Controls.PrintControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SpiceSharpRunner.Windows.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel Name="Panel" LastChildFill="True" Background="Gray">
        <DockPanel DockPanel.Dock="Top" LastChildFill="False">
            <Label Name="Title" DockPanel.Dock="Left"/>
            <Button Content="Save to CSV" Width="100" DockPanel.Dock="Right" Margin="10"  Click="Button_Click" />
        </DockPanel>
            <Grid>
                <DataGrid
                      Name="dataGrid"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch">
                </DataGrid>
            </Grid>
        </DockPanel>
</UserControl>
