<UserControl x:Class="SpiceSharpRunner.Windows.Controls.PlotControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SpiceSharpRunner.Windows.Controls"
             xmlns:oxy="http://oxyplot.org/wpf"
             mc:Ignorable="d" 
             d:DesignHeight="599.306" d:DesignWidth="845.139">
    <DockPanel Background="White">
        <Label DockPanel.Dock="Top" Content="Options" />
        <CheckBox Name="x" Content="X-axis Log scale" Height="20" DockPanel.Dock="Top" Click="CheckBox_Click" />
        <CheckBox Name="y" Content="Y-axis Log scale" Height="20" DockPanel.Dock="Top" Click="CheckBox_Click_1"/>
        <CheckBox Name="legend" Content="Show legend" Height="20" DockPanel.Dock="Top" Click="CheckBox_Click_3"/>
        <Button Name="save" Content="Save plot" DockPanel.Dock="Bottom" Click="save_Click"/>
        <oxy:PlotView Background="Azure" Name="plot" Model="{Binding OxyPlotModel}"/>
    </DockPanel>
</UserControl>
