<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SpiceSharpRunner.Portable">
  <DockPanel Name="stackPanel1" LastChildFill="True">
    <Menu  DockPanel.Dock="Top">
      <MenuItem Header="_File">
        <MenuItem Header="_Open" Command="{Binding OpenCommand}"/>
        <MenuItem Header="_Save" Command="{Binding SaveCommand}"/>
        <MenuItem Header="_Exit" Command="{Binding ExitCommand}"/>
      </MenuItem>
      <MenuItem Header="_Simulation">
        <MenuItem Header="_Run"  Command="{Binding RunCommand}"/>
      </MenuItem>
      <MenuItem Header="_Help">
        <MenuItem Header="_About" Command="{Binding AboutCommand}" />
      </MenuItem>
    </Menu>
    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="5">
      <TextBlock Height="20" Margin="5">
        Evaluator mode:
      </TextBlock>
      <DropDown SelectedIndex="{Binding SelectedEvaluatorMode, Mode=TwoWay}">
        <DropDownItem>Spice3f5</DropDownItem>
        <DropDownItem>SmartSpice</DropDownItem>
        <DropDownItem>HSpice</DropDownItem>
        <DropDownItem>LtSpice</DropDownItem>
      </DropDown>
      <Separator Margin="5"></Separator>
      <Button Command="{Binding RunCommand}">Run</Button>
    </StackPanel>
   <TextBox AcceptsReturn="True" TextWrapping="Wrap" FontFamily="Consolas" Name="netlist" Text="{Binding Netlist, Mode=TwoWay}"/>
  </DockPanel>
</Window>